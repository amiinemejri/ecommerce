{% extends 'basefront.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Transaction</h1>

    <div class="row">
        {% for transaction in transactions %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-exchange-alt"></i> Transaction ID: {{ transaction.transactionid }}</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Sender:</strong> {{ transaction.sender }}
                            </li>
                            <li class="list-group-item">
                                <strong>Receiver:</strong> {{ transaction.receiver }}
                            </li>
                            <li class="list-group-item">
                                <strong>Amount:</strong> {{ transaction.amount }}
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <a href="{{ path('app_transaction_showfront', {'transactionid': transaction.transactionid}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Show Details
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    No records found
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
