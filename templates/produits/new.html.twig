
{% extends 'base.html.twig' %}

{% block title %}New Produits{% endblock %}
{% block body %}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-3">
                <h1 class="text-center mb-4">Ajouter un produit</h1>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <label for="{{ form.nom.vars.id }}">Nom</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.prix.vars.id }}">Prix</label>
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.description.vars.id }}">Description</label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
              <div class="form-group">
    <label for="{{ form.categorie.vars.id }}">Cat√©gorie</label>
    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.categorie) }}
</div>

                <div class="form-group">
                    <label for="{{ form.dateajout.vars.id }}">Date d'ajout</label>
                    {{ form_widget(form.dateajout, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateajout) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>


{% endblock %}
