{% extends 'base.html.twig' %}

{% block title %}Commande Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Commande Index</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Id Commande</th>
                        <th>Date Commande</th>
                        <th>Description</th>
                        <th>Montant Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.idCommande }}</td>
                        <td>{{ commande.datecommande ? commande.datecommande|date('Y-m-d') : '' }} </td> 
                        <td>{{ commande.description }}</td>
                        <td>{{ commande.montanttotal }}</td>
                        <td>
                            <a href="{{ path('app_commande_show', {'idCommande': commande.idCommande}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_commande_edit', {'idCommande': commande.idCommande}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_commande_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>
{% endblock %}
