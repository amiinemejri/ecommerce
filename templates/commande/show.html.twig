{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Commande Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25">Id Commande</th>
                            <td>{{ commande.idCommande }}</td>
                        </tr>
                        <tr>
                            <th>Date Commande</th>
                            <td>{{ commande.datecommande ? commande.datecommande|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ commande.description }}</td>
                        </tr>
                        <tr>
                            <th>Montant Total</th>
                            <td>{{ commande.montanttotal }}</td>
                        </tr>
                         <tr>
                  
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-right">
                <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a href="{{ path('app_commande_edit', {'idCommande': commande.idCommande}) }}" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h3 class="mb-0">Delete Commande</h3>
            </div>
            <div class="card-body">
                {{ include('commande/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
