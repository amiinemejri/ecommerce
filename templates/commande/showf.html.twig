{% extends 'basefront.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
<a href="{{ path('app_commande_affichfront') }}" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to List
</a>
<div class="container mt-5">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center mb-0"><i class="fas fa-receipt mr-2"></i>Commande Details</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong><i class="fas fa-id-badge mr-2"></i>Id Commande:</strong>
                </div>
                <div class="col-md-8">
                    {{ commande.idCommande }}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <strong><i class="far fa-calendar-alt mr-2"></i>Date Commande:</strong>
                </div>
                <div class="col-md-8">
                    {{ commande.datecommande ? commande.datecommande|date('Y-m-d') : '' }}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <strong><i class="fas fa-align-left mr-2"></i>Description:</strong>
                </div>
                <div class="col-md-8">
                    {{ commande.description }}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <strong><i class="fas fa-dollar-sign mr-2"></i>Montant Total:</strong>
                </div>
                <div class="col-md-8">
                    {{ commande.montanttotal }}
                </div>
            </div>
            
        </div>
        <div class="card-footer text-right bg-light">
            <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to List
            </a>
        </div>
    </div>
</div>
{% endblock %}
