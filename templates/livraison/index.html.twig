{% extends 'base.html.twig' %}

{% block title %}Livraison index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Livraison </h1>

        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID Livraison</th>
                    <th>Adresse</th>
                    <th>Destinataire</th>
                    <th>Date de Livraison</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for livraison in livraisons %}
                    <tr>
                        <td>{{ livraison.idlivraison }}</td>
                        <td>{{ livraison.adresse }}</td>
                        <td>{{ livraison.destinataire }}</td>
                        <td>{{ livraison.dateLivraison ? livraison.dateLivraison.format('Y-m-d') : 'N/A' }}</td>
                        <td>
                            <a href="{{ path('app_livraison_show', {'idlivraison': livraison.idlivraison}) }}" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Show</a>
                            <a href="{{ path('app_livraison_edit', {'idlivraison': livraison.idlivraison}) }}" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_livraison_new') }}" class="btn btn-success"><i class="bi bi-plus"></i> Create New</a>
    </div>
{% endblock %}
