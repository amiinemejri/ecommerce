{% extends 'basefront.html.twig' %}

{% block title %}Vehicule Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Vehicule </h1>

        <div class="row">
            {% for vehicule in vehicules %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            ID Vehicule: {{ vehicule.idvehicule }}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ vehicule.marque }} - {{ vehicule.modele }}</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Annee: {{ vehicule.annee }}</li>
                                <li class="list-group-item">Couleur: {{ vehicule.couleur }}</li>
                                <li class="list-group-item">Immatriculation: {{ vehicule.immatriculation }}</li>
                            </ul>
                            <a href="{{ path('app_vehicule_showfront', {'idvehicule': vehicule.idvehicule}) }}" class="btn btn-info btn-sm mt-3">
                                <i class="fas fa-eye"></i> Show
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        No records found
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
